{
  "name": "opale-react",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build-dev": "tsc && vite build --mode development",
    "build": "tsc && vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "watch": "vitest",
    "prepublishOnly": "npm run build",
    "debug": "vite build --debug"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "c8": "^10.1.3",
    "eslint": "^9.20.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.6"
  },
  "main": "./dist/opale-react.cjs.js",
  "module": "./dist/opale-react.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/opale-react.es.js",
      "require": "./dist/opale-react.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "description": "React components for registering and authenticating Opale AgeKeys",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CadamTech/opale-react.git"
  },
  "keywords": [
    "react",
    "components",
    "agekey",
    "verification"
  ],
  "author": "Hamza Zbili",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CadamTech/opale-react/issues"
  },
  "homepage": "https://github.com/CadamTech/opale-react#readme",
  "dependencies": {
    "@simplewebauthn/browser": "^13.1.0",
    "axios": "^1.8.3"
  }
}
